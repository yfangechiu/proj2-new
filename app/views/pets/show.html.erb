<style>
table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
}

tr:nth-child(even) {
    background-color: #dddddd;
}
</style>
</head>
<body>

<table>

  <tr>
  	<th>
		Pet Name 
	</th>
	<th>
		Type
	</th> 
	<th>
		Description
	</th>
	
	<th>
		Request a Pet
	</th>


  </tr>

<% if @pets != nil %> 
  <%@pets.each do |pet| %>
    <tr>
      <%= render pet %>
    </tr>
  <% end %>
<% end %>

<% if @pets == nil %> 
  <%@pets.each do |pet| %>
    <tr>
      <%= render pet %>
    </tr>
  <% end %>
<% end %>

</table>

</body>
</html>